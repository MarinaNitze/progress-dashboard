---
layout: default
pagination:
  data: collections.blog
  size: 1
  alias: blog_post
permalink: "/blog/{{ blog_post.fileSlug }}/"
---


<div class="flex items-end bg-gray-900 bg-no-repeat bg-right">
    <div class="mx-auto w-full">
        <div class="max-w-screen-lg py-24 pl-[5%]">
            <h1 class="font-serif text-5xl font-bold">{{ blog_post.title }}</h1>
            <div class="mt-2">Posted on {{ blog_post.date | readableDate }}</div>
        </div>
    </div>
</div>
<div class="hidden md:block mx-auto px-8 md:px-[5%]">
    <nav class="flex py-8" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/" class="font-medium text-navy hover:underline">Home</a>
            </li>
            <li>
                <div class="flex items-center gap-2">
                    <span>/</span>
                    <a href="/blog" class="font-medium text-navy hover:underline">Blog</a>
                </div>
            </li>
            <li aria-current="page">
                <div class="flex items-center gap-2">
                    <span>/</span>
                    <strong class="text-navy hover:underline font-bold">{{ blog_post.title }}</strong>
                </div>
            </li>
        </ol>
    </nav>
</div>
<div class="flex">
    <div class="mx-auto w-full">
        <div class="max-w-screen-lg px-[5%] prose prose-xl mb-24">
            {% if blog_post.content %}
                {{ blog_post.content | markdown | safe }}
            {% endif %}
        </div>
    </div>
</div>